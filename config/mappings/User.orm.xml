<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\User" table="amo_user">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="createdAt" type="datetime" nullable="false"/>
        <field name="updatedAt" type="datetime" nullable="true"/>
        <field name="firstname" type="string" nullable="false"/>
        <field name="lastname" type="string" nullable="false"/>
        <field name="username" type="string" nullable="false"/>
        <field name="email" type="string" nullable="false"/>
        <field name="password" type="string" nullable="false"/>
        <field name="roles" type="array" nullable="false"/>

        <many-to-one field="group" target-entity="App\Domain\Model\GroupUser" inversed-by="members">
            <join-column name="group_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>