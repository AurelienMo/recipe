<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\Product" table="amo_product" repository-class="App\Domain\Repository\ProductRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="createdAt" type="datetime" nullable="false"/>
        <field name="updatedAt" type="datetime" nullable="true"/>
        <field name="name" type="string" nullable="false"/>
        <field name="slug" type="string" nullable="false"/>

        <many-to-one field="typeProduct" target-entity="App\Domain\Model\TypeProduct">
            <join-column name="type_product_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <many-to-one field="typeQuantity" target-entity="App\Domain\Model\TypeQuantity">
            <join-column name="type_quantity_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>